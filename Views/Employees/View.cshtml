@model Pierwsza_Web.Models.UpdateEmployeeViewModel

@{
}

<h1>Edit Employee</h1>
<form method="post" action="View" class="mt-5">
    <div class="form-group">
        <label for="">Id</label>
        <input type="text" class="form-control" asp-for="Id" />
    </div>
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label for="">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label for="">Salary</label>
        <input type="number" class="form-control" asp-for="Salary" />
    </div>
    <div class="form-group">
        <label for="">Birth date</label>
        <input type="date" class="form-control" asp-for="BirthDate" />
    </div>
    <div class="form-group">
        <label for="">Position</label>
        <input type="number" class="form-control" asp-for="Position" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Employees">Delete</button>
</form>